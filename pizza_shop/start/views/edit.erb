<form method="post" action="/pizza_orders/<%=@order.id%>">
  <label for="first_name">First Name:</label>
    <input type="text" id="first_name" name="first_name" value="<%=@order.first_name%>">
    <br />
  <label for="last_name">Last Name:</label>
    <input type="text" id="last_name" name="last_name" value="<%=@order.last_name%>">
    <br />
  <label for="quantity">Quantity:</label>
    <input type="number" min=0 id="quantity" name="quantity" value="<%=@order.quantity%>">
    <br />
  <label for="topping">Topping:</label>
    <select id="pizza_select" name="topping" value="<%= @order.topping %>">
      <option value="Margherita">Margherita</option>
      <option value="Pepperoni">Pepperoni</option>
      <option value="Italian Sausage">Italian Sausage</option>
    </select>
    <br />
  <input id="update" type="submit" value="Update"/>
</form>
